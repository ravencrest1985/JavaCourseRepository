<?xml version="1.0" encoding="UTF-8"?>
<job id="job" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/jobXML_1_0.xsd"
    version="1.0">
    <step id="copyStep">
    <batchlet  ref="myBatchlet"></batchlet>
    <next on="MOVE_SUCCESS" to="deciderJob"/>
    <fail on="MOVE_FAILED"/>
    </step>
    
	<decision ref="deciderJob" id="deciderJob">
    <next on="FILES_EXIST" to="importToDatabase"/>
    <end on="NO_FILES"/>
    </decision>
    
    <step id="importToDatabase">
    <chunk>
    <reader ref="csvReader"></reader>
    <processor ref="csvProcessor"></processor>
    <writer ref="csvWriter"></writer>
    </chunk>
    </step>
    
</job>